# OpenWeatherMap API Key
# Register at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_api_key_here

# AirVisual API Key
# Register at: https://www.iqair.com/air-pollution-data-api
AIRVISUAL_API_KEY=your_api_key_here

# Flask Secret Key
# Generate with: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=your_secret_key_here

# Flask Debug Mode (0 = production, 1 = development)
FLASK_DEBUG=0

# Default Environmental Values (used when API keys are not provided)
DEFAULT_TEMPERATURE=20
DEFAULT_HUMIDITY=50
DEFAULT_WEATHER_SCORE=70
DEFAULT_AQI=50
DEFAULT_AIR_SCORE=75
